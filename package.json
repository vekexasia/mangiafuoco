{
  "name": "mangiafuoco",
  "version": "1.2.1",
  "description": "An efficient nodejs hooking system.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "mocha ./test/**/*.spec.ts",
    "lint": "tslint -c tslint.json src/*.ts src/**/*.ts src/**/**/*.ts",
    "cover": "nyc -e '.ts' -x 'tests/**' -r lcov npm run test && cat ./coverage/lcov.info | coveralls",
    "transpile": "shx rm -rf dist/; tsc -d",
    "prepublish": "shx rm -rf ./dist/ && npm run transpile",
    "none": "echo I hate trailing commas"
  },
  "keywords": [
    "hook system",
    "wordpress"
  ],
  "author": "Andrea Baccega",
  "license": "MIT",
  "dependencies": {
    "es6-promisify": "^5.0.0"
  },
  "devDependencies": {
    "@types/chai": "=4.1.4",
    "@types/chai-as-promised": "=7.1.0",
    "@types/mocha": "=5.2.0",
    "@types/node": "=10.3.3",
    "@types/redis": "=2.8.6",
    "@types/sinon": "=5.0.1",
    "chai": "=4.1.2",
    "chai-as-promised": "=7.1.1",
    "coveralls": "=3.0.1",
    "mocha": "=5.2.0",
    "nyc": "=12.0.2",
    "proxyquire": "=2.0.1",
    "redis": "^2.6.3",
    "shx": "=0.3.0",
    "sinon": "=6.0.0",
    "source-map-support": "=0.5.6",
    "ts-node": "^6.1.1",
    "tslint": "=5.10.0",
    "tslint-sonarts": "^1.7.0",
    "typescript": "=2.9.2"
  }
}
